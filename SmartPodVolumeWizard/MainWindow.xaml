<Window x:Class="SmartPodVolumeWizard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:SmartPodVolumeWizard"
        mc:Ignorable="d"
        Width="410" Height="300"
        MinWidth="400" MinHeight="250"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <!-- 直接在这里实例化 ViewModel 以便 XAML 预览处可正确显示各控件属性 -->
        <local:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Thickness x:Key="LabelPadding">4</Thickness>
        <Thickness x:Key="StackSpacingVert">0,0,0,5</Thickness>
        <Thickness x:Key="StackSpacingHorz" Right="5"></Thickness>
        <Thickness x:Key="TabPagePadding">0</Thickness>
    </Window.Resources>

    <Window.Style>
        <Style TargetType="Window">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ConfigModified}" Value="True">
                    <Setter Property="Title" Value="SmartPodVolume 设置向导 *已修改" />
                </DataTrigger>
                <DataTrigger Binding="{Binding ConfigModified}" Value="False">
                    <Setter Property="Title" Value="SmartPodVolume 设置向导" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
    
    <DockPanel Margin="5" LastChildFill="True" >
        <DockPanel DockPanel.Dock="Top" Margin="{StaticResource StackSpacingVert}" LastChildFill="False">
            <TextBlock DockPanel.Dock="Left" x:Name="BkgndServiceStatusLabel" FontWeight="Bold" HorizontalAlignment="Left" Padding="{StaticResource LabelPadding}" VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ServiceRunning}" Value="True">
                                <Setter Property="Text" Value="运行中" />
                                <Setter Property="Foreground" Value="DarkGreen" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ServiceRunning}" Value="False">
                                <Setter Property="Text" Value="已停止" />
                                <Setter Property="Foreground" Value="Red" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="StartButton" FontWeight="Bold" Margin="{StaticResource StackSpacingHorz}" Width="100"
                        HorizontalAlignment="Right" Padding="3" Click="StartButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ServiceRunning}" Value="True">
                                    <Setter Property="Content" Value="停止服务" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ServiceRunning}" Value="False">
                                    <Setter Property="Content" Value="启动服务" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="RefreshListsBtn" Content="刷新列表" Padding="3" Width="100" Click="RefreshListsBtn_Click" />
            </StackPanel>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False">
            <TextBlock VerticalAlignment="Center" Text="更改设置后需重启后台服务才能完全生效。" DockPanel.Dock="Left" />
            <Button x:Name="ApplyConfigBtn" DockPanel.Dock="Right" Padding="3" Content="重启服务" Width="100"
                    FontWeight="Bold" Click="ApplyConfigBtn_Click" />
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False" Margin="{StaticResource StackSpacingVert}">
            <TextBlock VerticalAlignment="Center" Text="操作选定设备：" DockPanel.Dock="Left" />
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button x:Name="MoveToTheOtherListBtn" Content="{Binding MoveToOtherListBtnText}" Width="100" Margin="{StaticResource StackSpacingHorz}" Padding="3" Click="MoveToTheOtherListBtn_Click"/>
                <Button x:Name="ForgetDeviceBtn" Content="忘记设备" Width="100" Padding="3" Click="ForgetDeviceBtn_Click"/>
            </StackPanel>
        </DockPanel>
        <TabControl DockPanel.Dock="Top" x:Name="ListViewTab" Margin="{StaticResource StackSpacingVert}" SelectedIndex="{Binding ListTabSelectedIndex}" >
            <TabItem Header="已接管设备">
                <ListView x:Name="WhiteListView" SelectionMode="Single" ItemsSource="{Binding WhiteListDevices}" Margin="{StaticResource TabPagePadding}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="友好名称" DisplayMemberBinding="{Binding Value.FriendlyName}" Width="100" />
                            <GridViewColumn Header="静音" DisplayMemberBinding="{Binding Value.Mute}" Width="30" />
                            <GridViewColumn Header="期望音量(%)" DisplayMemberBinding="{Binding Value.VolumePercent}" Width="70" />
                            <GridViewColumn Header="描述" DisplayMemberBinding="{Binding Value.Description}" Width="60" />
                            <GridViewColumn Header="MM设备ID" DisplayMemberBinding="{Binding Key}" Width="80" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="黑名单设备">
                <ListView x:Name="BlackListView" SelectionMode="Single" ItemsSource="{Binding BlackListDevices}" Margin="{StaticResource TabPagePadding}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="友好名称" DisplayMemberBinding="{Binding Value.FriendlyName}" Width="100" />
                            <GridViewColumn Header="描述" DisplayMemberBinding="{Binding Value.Description}" Width="70" />
                            <GridViewColumn Header="MM设备ID" DisplayMemberBinding="{Binding Key}" Width="100" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </DockPanel>

</Window>
